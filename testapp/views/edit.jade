extends layout
block content
    h1= title
    p Welcome to #{title}
    p#msg #{msg}
    form(method='post', action='/update')
        input(type='text',name='id',value='#{data._id}')
        table
            tr
                td Title
                td
                    textarea(wrap='soft',name='title',cols='30',rows='1')=data.title
            tr
                td Author
                td
                    textarea(wrap='soft',name='author',cols='30',rows='1')=data.author

            tr
                td Summary
                td
                    textarea(wrap='soft',name='summary',cols='30',rows='4')=data.summary

            tr
                td Review
                td
                    textarea(wrap='soft', name='review',cols='30',rows='4')=data.review
            tr
                td
                td
                    input(type='submit', value='送信') 